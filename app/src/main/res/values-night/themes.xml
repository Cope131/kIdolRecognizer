<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KIdolRecognizer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <!-- Text Styles -->
    <style name="Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textColor">@color/white_300</item>
    </style>

    <style name="Title2" parent="Title">
        <item name="android:textFontWeight" tools:targetApi="p">300</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Title3" parent="Title">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white_300</item>
    </style>

    <style name="Header" parent="Title">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white_500</item>
    </style>

    <style name="ModalTitle" parent="Title">
        <item name="android:textSize">21dp</item>
        <item name="android:textFontWeight" tools:targetApi="p">300</item>
    </style>

    <style name="ModalLabel" parent="Title">
        <item name="android:textSize">15dp</item>
        <item name="android:textFontWeight" tools:targetApi="p">350</item>
        <item name="android:textColor">@color/white_400</item>
    </style>

    <!-- Card Styles -->
    <style name="Card" parent="">
        <item name="cardBackgroundColor">@color/space_gray</item>
        <item name="strokeColor">@color/white_600</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="CardEmpty" parent="Card">
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="CardText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/white_300</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardImage" parent="">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/space_gray</item>
        <item name="strokeColor">@color/white_600</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Button -->
    <style name="ButtonHint" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/draggable_hint</item>
        <item name="backgroundTint">@color/white_400_A80</item>
    </style>

    <style name="ButtonBottomBar" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/space_gray</item>
        <item name="strokeColor">@color/white_600</item>
    </style>

    <!-- Progress Indicator -->
    <style name="ProgressIndicator">
        <item name="trackThickness">2dp</item>
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/white_300</item>
        <item name="trackCornerRadius">5dp</item>
    </style>

    <!-- Bottom App Bar -->
    <style name="BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="backgroundTint">@color/space_gray</item>
    </style>



</resources>